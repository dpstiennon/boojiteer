<p>
  Welcome, <%= @user.firstname %>
</p>
<div class="container" ng-app="boojit">
  <div ng-controller="TotalController as total">
    <div class="col-md-6">
      <div class="well">
        Recurring Expenses go here
        <input type="text" ng-model="total.recurringExpenses"/>
      </div>
      <div class="well">
        Income information goes here
        <input type="text" ng-model="total.income">
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        Budgets go here
        <input type="text" ng-model="total.budgetedExpenses">
      </div>
      <div class="well">
        Any Irregular Expenses go here
        <input type="text" ng-model="total.irregulars">
      </div>
      <span>
         Budget total is {{total.income - total.recurringExpenses - total.budgetedExpenses - total.irregulars}}
      </span>
    </div>


  </div>
</div>
