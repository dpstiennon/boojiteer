<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user, class: '') do |f| %>

          <legend>Sign up, and we'll get you started budgeting</legend>

          <div class="form-group col-md-6">
            <%= f.label :firstname, 'First Name', class: 'form-label' %>
            <%= f.text_field :firstname, class: 'form-control' %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :lastname, 'Last Name', class: 'form-label' %>
            <%= f.text_field :lastname, class: 'form-control' %>
          </div>
          <div class="form-group col-md-12">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

            <div class="form-group col-md-12">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group col-md-12">
              <%= f.label :password, 'Password Confirm', class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

          <div class="col-md-2">
            <%= f.submit class: 'btn btn-primary' %>
          </div>

      <% end %>
    </div>
  </div>
</div>